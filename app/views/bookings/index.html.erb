<div class="container">
  <h1 class= "mt-3">Your orders</h1>

  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <button class="nav-link fade show active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Plant-Swap Requests</button>
      <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">My bookings</button>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="booking-card">
        <% @bookings_seller.each do |booking| %>
          <p><%= "Booking id #{booking.id}"%></p>
          <p><%= "Order #{booking.buy_status}"%></p>
          <p><%= "Plant: #{booking.plant.common_name}"%></p>
          <p><%= "Quantity: #{booking.booking_quantity}"%></p>
          <p><%= "Amount of plants left: #{booking.plant.quantity}" %></p>
          <% if booking.buy_status == 'pending' %>
            <%= link_to "Approve", reply_buy_path(booking, status: 'accepted') %>
            <%= link_to "Reject", reply_buy_path(booking, status: 'rejected') %>

          <% elsif booking.buy_status == 'accepted' || booking.buy_status == 'completed'  %>
            <p><strong>You approved this booking</strong></p>

          <% else booking.buy_status == 'rejected' %>
            <p><strong>You rejected this booking</strong></p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="row">
          <% @bookings.each do |booking| %>
              <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                <div class="booking-card mb-2">
                  <div class="booking-image">
                    <% if booking.plant.photo.attached? %>
                      <%= cl_image_tag booking.plant.photo.key, height: 180, width: 150 %>
                    <% end %>
                  </div>
                  <div class="booking-content">
                    <p><strong>Plant name: </strong><%= booking.plant.common_name %></p>
                    <p><strong>Plant owner: </strong><%= "#{booking.plant.user.first_name} #{booking.plant.user.last_name}"%></p>
                    <p><strong>Quantity: </strong><%= booking.booking_quantity%></p>
                    <p><strong>Order Status: </strong><%= booking.buy_status%></p>
                  </div>
                  <div class="booking-user-action">
                    <button class="btn btn-primary">Contact owner</button>
                    <button class="btn btn-danger">Delete</button>
                  </div>
                </div>
              </div>
          <% end %>
            </div>
    </div>
  </div>
</div>
