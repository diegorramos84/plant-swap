<div class="container-xxl">
  <br>
  <div class="plant-index-header">
    <div type="button" class="return-btn" onclick="history.back()">
      <i class="fa-solid fa-arrow-left"></i>
    </div>
     <h1 class="text-center"><%= @plant.common_name %></i></h1>
  </div>
  <br>
  <div class="plant-show-container">
    <div class="container-label-img">
      <% if @plant.photo.attached? %>
        <%= cl_image_tag @plant.photo.key, height: 500, width: 600 %>
      <% end %>
      <%# <div class="overlay"> %>
        <%= link_to user_path(@user) do %>
          <%= cl_image_tag @user.photo.key, class: 'image-show-avatar' %>
        <% end %>
      <%# </div> %>
    </div>
    <div class="container-label-info">
      <p><strong>Category:</strong> <%= @plant.category %></p>
      <p><strong>Plant type:</strong> <%= @plant.plant_type %></p>
      <p><strong>Description:</strong> <%= @plant.description %></p>
      <% if @plant.indoor %>
        <p>This is an indoor plant</p>
      <% else %>
        <p>This is an outdoor plant</p>
      <% end %>
      <p><strong>Botanical name:</strong> <%= @plant.botanical_name %></p>
      <p><strong>Common name:</strong>  <%= @plant.common_name %></p>
      <p><strong>Light conditions:</strong> <%= @plant.light_conditions %></p>
      <p><strong>Mature height:</strong> <%= @plant.mature_height %>cm</p>
      <p><strong>Quantity:</strong> <%= @plant.quantity %></p>
      <%= link_to "Order plant", new_plant_booking_path(@plant), class: "pink-btn" %>
      <%# <%= link_to "View #{@plant.user.first_name} #{@plant.user.last_name}'s profile", user_path(@user), class: "pink-btn" %>
    </div>

  </div>
<br><br>
  <div class="map-label">
    <div
      style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-marker-value="<%= @marker.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <br><br>
</div>
