<h1>Plants Index Page</h1>

<%= link_to "List a plant", new_plant_path %>
<div class="container">
<h2>Search for a plant: </h2>
<%= simple_form_for :search_by_name_type_and_category, url: plants_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
</div>

<hr>

<% @plants.each do |plant| %>
    <li><%= link_to plant.common_name, plant_path(plant) %></li>
    <%= link_to "See user's profile", user_path(plant.user) %>
    <% if plant.photo.attached? %>
      <%= cl_image_tag plant.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <hr>
<% end %>
