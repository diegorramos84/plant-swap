<div class="container">
<br><br>
  <div class="listing-card">
    <h1>List your plant</h1>
    <br>

    <%= simple_form_for @plant do |f| %>
      <%= f.input :category %>
      <%= f.input :plant_type %>
      <%= f.input :botanical_name %>
      <%= f.input :common_name %>
      <%= f.input :description %>
      <%= f.input :light_conditions %>
      <%= f.input :mature_height %>
      <%= f.input :quantity %>
      <%= f.input :indoor %> <br> <br>
      <%= f.button :submit, class: "pink-btn" %>
    <% end %>
  </div>
    <br>
</div>
