<% if @user == current_user %>
  <h1>Your profile</h1>
  <h3>Rating: <%= @user.average_rating %> </h3>
<% else %>
  <h1><%= @user.first_name %>'s profile</h1>
  <h3>Rating: <%= @user.average_rating %> </h3>
<% end %>
<hr>

<% if @user == current_user %>
  <h1>Your garden</h1>
<% else %>
  <h2><%= @user.first_name %>'s garden</h2>
<% end %>
<% @user.plants.each do |plant| %>
  <div>
    <%=link_to plant.common_name, plant_path(plant) %>
    <% if plant.photo.attached? %>
      <%= cl_image_tag plant.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <% if plant.user == current_user %>
      <%= link_to "Edit", edit_plant_path(plant) %>
      <%= link_to "Delete", plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
    <% end %>
  </div>
<% end %>

<h2>Reviews</h2>

<% @user.plants.each do |plant| %>
  <% plant.bookings.each do |booking| %>
    <% if booking.review != nil %>
      <p>Rating: <%= booking.review.rating.to_i %></p>
      <p><%= booking.review.content %></p>
    <% else %>
      <p>No reviews exist</p>
    <% end %>
  <% end %>
<% end %>
