<div class="container-xxl mt-4">
    <form>
      <input type="button" value="Back" onclick="history.back()" class="pink-btn">
    </form>
  <br>
  <div class="row">
    <div class="profile-container col-4">
      <div class="profile">
        <div class="profile-image d-flex justify-content-center">
          <% if @user.photo.attached? %>
              <%= cl_image_tag @user.photo.key %>
            <% else %>
              <%= image_tag("https://res.cloudinary.com/lardocelar/image/upload/v1654685294/user_placeholder_kbf1mr.png") %>
          <% end %>
        </div>
          <% if @user == current_user %>
            <h2 class="text-center mb-3 mt-3"><%="Your profile"%></h2>
            <h3>Your Average Rating: <%= @user.average_rating %> </h3>
          <% else %>
            <h2 class="text-center mb-3 mt-3"><%= @user.first_name %>'s profile</h2>
            <p>Rating: <%= @user.average_rating %></p>
          <% end %>
      </div>

      <div class="reviews">
        <h2>Reviews</h2>
        <% @user.plants.each do |plant| %>
          <% plant.bookings.each do |booking| %>
            <% if booking.review != nil %>
              <div class="review-card">
                <div class="star-rating">
                  <p><% booking.review.rating.to_i.times do %>
                    <i class="fa-solid fa-star"></i>
                  <% end %>
                  </p>
                </div>
                <p><%= booking.user.first_name %>: <em>"<%= booking.review.content %>"</em></p>
                <%# <p>Reviewed by <%= booking.user.first_name</p> %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="your-garden col-8">
      <div class="your-garden-heading">
        <% if @user == current_user %>
          <h1 class="text-center mb-3 mt-n1">Your garden</i></h1>
        <% else %>
          <h1 class="text-center mb-3 mt-n1"><%= @user.first_name %>'s garden</i></h1>
        <% end %>
      </div>
      <div class="card-grid">
        <% @user.plants.each do |plant| %>
          <div class="plant-card-garden mb-3">
            <%= link_to plant_path(plant) do %>
              <div class="plant-garden-picture">
                <% if plant.photo.attached? %>
                  <%= cl_image_tag plant.photo.key, height: 250, width: 250 %>
                <% end %>
              </div>
            <% end %>
            <div class="garden-plant-info">
              <p><strong>Plant name: </strong><%= plant.common_name %></p>
              <p><strong>Plant type: </strong><%= plant.plant_type %></p>
              <p><strong>Amount of plants left: </strong><%= plant.quantity%></p>
              <div class="garden-user-actions">
                <% if plant.user == current_user %>
                  <%= link_to edit_plant_path(plant) do %>
                    <div class="user-profile-icon">
                      <i class="fa-solid fa-pen-to-square"></i>
                    </div>
                  <% end %>
                  <%= link_to plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                    <div class="user-profile-icon">
                      <i class="fa-solid fa-trash-can"></i>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
